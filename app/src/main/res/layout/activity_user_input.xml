<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Input"
    android:background="@drawable/main_activity_back_rount"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:fontFamily="@font/aldrich"
        android:text="Personal Profile Information "


        android:textColor="#ffff"
        android:textSize="17sp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/main_activity_back_rount"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Image"
        android:textColor="#F57F17"
        android:textSize="17sp"
        android:textStyle="bold"

        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/aldrich"
        />








    <!--  >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>  <-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="70dp"

        app:cardElevation="10dp"


        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText

                android:id="@+id/edusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  username"
                android:textSize="20sp"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/user_icon"
                android:background="@drawable/ed_back_round"
                android:padding="5dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!--  >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>  <-->



    <!--  >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>  <-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="70dp"

        app:cardElevation="10dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/email_icon"
                android:hint="  Email/ phone"
                android:inputType="textEmailAddress"
                android:background="@drawable/ed_back_round"
                android:padding="5dp"
                android:textSize="20sp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!--  >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>  <-->







    <!--  >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>  <-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="70dp"

        app:cardElevation="10dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edcountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="    Country"
                android:inputType="text"
                android:background="@drawable/ed_back_round"
                android:padding="5dp"
                android:drawableRight="@drawable/down_icon"
                android:textSize="20sp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!--  >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>  <-->

    <!--  >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>  <-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="70dp"

        app:cardElevation="10dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Password"
                android:inputType="numberPassword"
                android:drawableLeft="@drawable/lock_icon"
                android:background="@drawable/ed_back_round"
                android:drawableRight="@drawable/eyse"
                android:padding="5dp"
                android:textSize="20sp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!--  >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>  <-->


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitbtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/submitbtn_back_round"
        android:fontFamily="@font/aldrich"


        android:textColor="#F57F17"
        android:textSize="20sp"
        android:textStyle="bold" />







</LinearLayout>